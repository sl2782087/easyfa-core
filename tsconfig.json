{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "apng": ["src/apng/index.ts"],
      "gif": ["src/gif/index.ts"]
    },
    "outDir": "lib",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib"]
}
